@model BW_5.Models.Cliente

@{
    ViewData["Title"] = "Elimina Cliente";
}

<h1>Elimina Cliente</h1>

<h4>Sei sicuro di voler eliminare questo cliente?</h4>
<hr />
<div>
    <h4>Cliente</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cognome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cognome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CodiceFiscale)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CodiceFiscale)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <input type="submit" value="Elimina" class="btn btn-danger" /> |
            <a asp-action="Index" class="btn btn-secondary">Annulla</a>
        </div>
    </form>
</div>
