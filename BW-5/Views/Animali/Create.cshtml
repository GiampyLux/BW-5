@model AnimaleViewModel

@{
    ViewData["Title"] = "Registra nuovo animale";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="DataRegistrazione">Data di Registrazione</label>
        <input asp-for="DataRegistrazione" class="form-control" type="date" />
        <span asp-validation-for="DataRegistrazione" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Nome">Nome</label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Razza">Tipologia (es. cane, gatto)</label>
        <input asp-for="Razza" class="form-control" />
        <span asp-validation-for="Razza" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Pelo">Colore del mantello</label>
        <input asp-for="Pelo" class="form-control" />
        <span asp-validation-for="Pelo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Nascita">Data di nascita</label>
        <input asp-for="Nascita" class="form-control" type="date" />
        <span asp-validation-for="Nascita" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PossiedeMicrochip">Possiede Microchip?</label>
        <select asp-for="PossiedeMicrochip" class="form-control" id="microchip-selector">
            <option value="true">Sì</option>
            <option value="false">No</option>
        </select>
    </div>

    <div class="form-group" id="microchip-number" style="display:none;">
        <label asp-for="NumeroMicrochip">Numero Microchip (se presente)</label>
        <input asp-for="NumeroMicrochip" class="form-control" />
        <span asp-validation-for="NumeroMicrochip" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IdProprietario">Proprietario</label>
        <select asp-for="IdProprietario" asp-items="Model.Proprietari" class="form-control"></select>
        <span asp-validation-for="IdProprietario" class="text-danger"></span>
    </div>


    <button type="submit" class="btn btn-primary">Registra Animale</button>
</form>

@section Scripts {
    <script>
        $(document).ready(function () {
            function toggleMicrochipNumber() {
                var hasMicrochip = $('#microchip-selector').val() === 'true';
                $('#microchip-number').toggle(hasMicrochip);
            }

            $('#microchip-selector').change(toggleMicrochipNumber);
            toggleMicrochipNumber(); 
        });
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
