@{
    ViewData["Title"] = "Cerca Vendite per Codice Fiscale";
}

<h1>Cerca Vendite per Codice Fiscale</h1>

<form asp-action="SearchByCodiceFiscale" method="post">
    <div class="form-group">
        <label for="codiceFiscale">Codice Fiscale</label>
        <input type="text" class="form-control" id="codiceFiscale" name="codiceFiscale" required />
    </div>
    <button type="submit" class="btn btn-primary">Cerca</button>
</form>
