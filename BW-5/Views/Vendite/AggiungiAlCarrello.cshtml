@model AggiungiAlCarrelloViewModel

@{
    ViewData["Title"] = "Aggiungi Prodotto al Carrello";
}

<h1>Aggiungi Prodotto al Carrello</h1>

<form asp-action="AggiungiAlCarrello" method="post">
    @Html.AntiForgeryToken()

    <input type="hidden" name="ClienteId" value="@Model.ClienteId" />

    <div class="form-group">
        <label for="ProdottoId">Seleziona Prodotto</label>
        <select id="ProdottoId" name="ProdottoId" class="form-control">
            @foreach (var prodotto in Model.Prodotti)
            {
                <option value="@prodotto.Id">@prodotto.Nome</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="NumeroRicetta">Numero Ricetta</label>
        <input type="text" id="NumeroRicetta" name="NumeroRicetta" class="form-control" placeholder="Inserisci Numero Ricetta" required />
    </div>

    <button type="submit" class="btn btn-primary">Aggiungi al Carrello</button>
</form>

<h2>Vendite Esistenti</h2>
<table class="table">
    <thead>
        <tr>
            <th>Nome Prodotto</th>
            <th>Numero Ricetta</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var vendita in Model.Vendite)
        {
            <tr>
                <td>@vendita.Prodotto.Nome</td>
                <td>@vendita.NumeroRicetta</td>
            </tr>
        }
    </tbody>
</table>
