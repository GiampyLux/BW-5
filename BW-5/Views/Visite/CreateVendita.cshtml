@model BW_5.ViewModels.VenditaViewModel

<form asp-action="CreateVendita" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="ClienteId">Cliente</label>
        <select asp-for="ClienteId" asp-items="@(new SelectList(Model.Clienti, "Id", "CodiceFiscale"))" class="form-control">
            <option value="">Seleziona un cliente</option>
        </select>
        <span asp-validation-for="ClienteId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ProdottoId">Prodotto</label>
        <select asp-for="ProdottoId" asp-items="@(new SelectList(Model.Prodotti, "Id", "Nome"))" class="form-control">
            <option value="">Seleziona un prodotto</option>
        </select>
        <span asp-validation-for="ProdottoId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DataVendita">Data Vendita</label>
        <input asp-for="DataVendita" type="date" class="form-control" />
        <span asp-validation-for="DataVendita" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RicettaMedica">Ricetta Medica (opzionale)</label>
        <input asp-for="RicettaMedica" class="form-control" />
        <span asp-validation-for="RicettaMedica" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Crea Vendita</button>
</form>
