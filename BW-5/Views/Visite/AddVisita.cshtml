@model BW_5.ViewModels.VisitaViewModel

@{
    ViewData["Title"] = "AddVisita";
}

<h1>Registra una nuova visita</h1>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(state => state.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}

<form asp-action="AddVisita" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="AnimaleId">Animale</label>
        <select asp-for="AnimaleId" asp-items="ViewBag.Animali" class="form-control">
            <option value="">Seleziona un animale</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="NomeAnimale">Razza</label>
        <input asp-for="NomeAnimale" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="DataVisita">Data Visita</label>
        <input asp-for="DataVisita" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Esame">Esame</label>
        <input asp-for="Esame" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="DescrizioneCura">Descrizione Cura</label>
        <textarea asp-for="DescrizioneCura" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Aggiungi Visita</button>
</form>

<a asp-action="AllVisite">Torna alla lista delle visite</a>