@model BW_5.ViewModels.VisitaViewModel

@{
    ViewData["Title"] = "Crea Nuova Visita";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="CreateVisita" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="DataVisita">Data della Visita</label>
        <input asp-for="DataVisita" class="form-control" type="date" />
        <span asp-validation-for="DataVisita" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NomeAnimale">Nome Animale</label>
        <input asp-for="NomeAnimale" class="form-control" />
        <span asp-validation-for="NomeAnimale" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Tipologia">Tipologia</label>
        <input asp-for="Tipologia" class="form-control" />
        <span asp-validation-for="Tipologia" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ColorePelo">Colore del Mantello</label>
        <input asp-for="ColorePelo" class="form-control" />
        <span asp-validation-for="ColorePelo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DataNascita">Data di Nascita</label>
        <input asp-for="DataNascita" class="form-control" type="date" />
        <span asp-validation-for="DataNascita" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Microchip">Numero Microchip (opzionale)</label>
        <input asp-for="Microchip" class="form-control" />
        <span asp-validation-for="Microchip" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NomeProprietario">Nome Proprietario</label>
        <input asp-for="NomeProprietario" class="form-control" />
        <span asp-validation-for="NomeProprietario" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CognomeProprietario">Cognome Proprietario</label>
        <input asp-for="CognomeProprietario" class="form-control" />
        <span asp-validation-for="CognomeProprietario" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CodiceFiscale">Codice Fiscale</label>
        <input asp-for="CodiceFiscale" class="form-control" />
        <span asp-validation-for="CodiceFiscale" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EsameObiettivo">Esame Obiettivo</label>
        <textarea asp-for="EsameObiettivo" class="form-control"></textarea>
        <span asp-validation-for="EsameObiettivo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DescrizioneCura">Descrizione della Cura</label>
        <textarea asp-for="DescrizioneCura" class="form-control"></textarea>
        <span asp-validation-for="DescrizioneCura" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Crea Visita</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
