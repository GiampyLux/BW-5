@model ProdottoVM

<h1>Elimina Prodotto</h1>

<h4>Prodotto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="Tipo" class="control-label"></label>
                <input asp-for="Tipo" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="DittaId" class="control-label"></label>
                <input asp-for="DittaId" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="CassettoId" class="control-label"></label>
                <input asp-for="CassettoId" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="ArmadioId" class="control-label"></label>
                <input asp-for="ArmadioId" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="Utilizzo" class="control-label"></label>
                <input asp-for="Utilizzo" class="form-control" readonly />
            </div>
            <div class="form-group">
                <input type="submit" value="Elimina" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-secondary">Annulla</a>
            </div>
        </form>
    </div>
</div>
