@model BW_5.Models.ViewModel.ProdottoVM

@{
    ViewData["Title"] = "Modifica Prodotto";
}

<h1>@ViewData["Title"]</h1>

<h4>Prodotto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Prodotto.Id" />
            <div class="form-group">
                <label asp-for="Prodotto.Nome" class="control-label"></label>
                <input asp-for="Prodotto.Nome" class="form-control" />
                <span asp-validation-for="Prodotto.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prodotto.Tipo" class="control-label"></label>
                <input asp-for="Prodotto.Tipo" class="form-control" />
                <span asp-validation-for="Prodotto.Tipo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prodotto.IdDitta" class="control-label"></label>
                <select asp-for="Prodotto.IdDitta" class="form-control" asp-items="@(new SelectList(Model.Ditte, "Id", "Nome"))"></select>
                <span asp-validation-for="Prodotto.IdDitta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prodotto.CassettoId" class="control-label"></label>
                <select asp-for="Prodotto.CassettoId" class="form-control" asp-items="@(new SelectList(Model.Cassetti, "Id", "Name"))"></select>
                <span asp-validation-for="Prodotto.CassettoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prodotto.ArmadioId" class="control-label"></label>
                <select asp-for="Prodotto.ArmadioId" class="form-control" asp-items="@(new SelectList(Model.Armadi, "Id", "Name"))"></select>
                <span asp-validation-for="Prodotto.ArmadioId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prodotto.Utilizzo" class="control-label"></label>
                <input asp-for="Prodotto.Utilizzo" class="form-control" />
                <span asp-validation-for="Prodotto.Utilizzo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salva" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Torna all'elenco</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
