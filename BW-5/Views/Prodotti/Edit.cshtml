@model ProdottoVM

@{
    ViewData["Title"] = "Modifica Prodotto";
}

<h1>Modifica Prodotto</h1>

<h4>Prodotto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tipo" class="control-label"></label>
                <input asp-for="Tipo" class="form-control" />
                <span asp-validation-for="Tipo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DittaId" class="control-label"></label>
                <select asp-for="DittaId" class="form-control" asp-items="ViewBag.Ditte"></select>
                <span asp-validation-for="DittaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ArmadioId" class="control-label"></label>
                <select asp-for="ArmadioId" class="form-control" asp-items="ViewBag.Armadi"></select>
                <span asp-validation-for="ArmadioId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CassettoId" class="control-label"></label>
                <select asp-for="CassettoId" class="form-control" asp-items="ViewBag.Cassetti"></select>
                <span asp-validation-for="CassettoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Utilizzo" class="control-label"></label>
                <input asp-for="Utilizzo" class="form-control" />
                <span asp-validation-for="Utilizzo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salva" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Torna alla lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
